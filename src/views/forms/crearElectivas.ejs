<% include ../partials/navigationAdmin %>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Electivas</title>
    <link rel="stylesheet" href="https://bootswatch.com/4/litera/bootstrap.min.css">
    <style>
        body {
            background: #6441A5;  /* fallback for old browsers */
            background: -webkit-linear-gradient(to right, #2a0845, #6441A5);  /* Chrome 10-25, Safari 5.1-6 */
            background: linear-gradient(to right, #2a0845, #6441A5); /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */
        }
        .card{
            background-color: #212F3D;
        }
        .footer{
            background-color: #212F3D;
        }
        td.boton {
            width: 35%;
        }
        nav.navbar {
            background-color: #212F3D;
        }
        nav-link:hover {
            color: #6C3483;
        }
    </style>
</head>
<body>
    <div class="container mt-5">
        <div class="col-md-4 mt-5">
            <div class="card text-center text-light">
                <form action="/admin/crearElectiva" method="POST">
                    <div class="card-header">
                        <h4>Crear Electiva</h4>
                    </div>

                    <div class="card-body">
                        <div class="form-group">
                            <input type="text" name="nombreElectiva" placeholder="Nombre Electiva" class="form-control">
                        </div>
                        <div class="form-group">
                            <textarea class="form-control" name="descripcion" placeholder="Descripcion" colums="10"></textarea>
                        </div>
                        <div class="form-group">
                            <input type="number" name="numCupos" placeholder="Numero de cupos" class="form-control">
                        </div>
                    </div>

                    <div class="card-footer">
                        <div class="form-group">
                            <button type="submit" class="btn btn-block text-white font-weight-bold" style="background-color: #6C3483">Crear Electiva</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>
</html>