<% include ../partials/navigationAdmin %>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Crear Profesor</title>
    <link rel="stylesheet" href="https://bootswatch.com/4/litera/bootstrap.min.css">

    <style>
        body {
            background: #6441A5;  /* fallback for old browsers */
            background: -webkit-linear-gradient(to right, #2a0845, #6441A5);  /* Chrome 10-25, Safari 5.1-6 */
            background: linear-gradient(to right, #2a0845, #6441A5); /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */
        }
        .card{
            background-color: #212F3D;
        }
        .footer{
            background-color: #212F3D;
        }
        td.boton {
            width: 35%;
        }
        nav.navbar {
            background-color: #212F3D;
        }
        nav-link:hover {
            color: #6C3483;
        }
    </style>
</head>
<body>
    <div class="container mt-5">
        <div class="row">
            <div class="col-md-4 mt-5">
                <div class="card text-center text-light">
                    <form action="/admin/crearProfesor" method="POST">
                        <div class="card-header">
                            <h4>Crear Profesor</h4>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <input type="text" name="nombreProfesor" placeholder="Nombre Profesor" class="form-control">
                            </div>
                            <div class="form-group">
                                <input type="text" name="nombreElectiva" placeholder="Nombre Electiva" class="form-control">
                            </div>
                        </div>
                        <div class="card-footer">
                            <div class="form-group">
                                <button type="submit" class="btn btn-success btn-block border-0 text-white font-weight-bold" style="background-color: #6C3483">Crear Profesor</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            <div class="col-md-8 mt-5 float-right">
                <table class="table text-light table-hover text-center">
                    <thead>
                        <tr class="table-dark headings">
                            <td style="border: 1px solid white;">Nombre</td>
                            <td style="border: 1px solid white;">Electiva</td>
                            <td style="border: 1px solid white;">Operacion</td>
                        </tr>
                    </thead>
                    <tbody>
                        <% for(var i = 1; i < profesor.length; i++) { %>
                            <tr class="table-light text-dark">
                                
                                <td style="border: 1px solid black;"><%= profesor[i].nombreProfesor %></td>
                                <td style="border: 1px solid black;"><%= profesor[i].nombreElectiva %></td>
                                <td class="boton" style="border: 1px solid black;">
                                    <a href="/admin/profesor/editar/<%= profesor[i]._id %>" class="badge badge-info font-weight-bold">Actualizar</a>
                                    <a href="/admin/delete/profesor/<%= profesor[i]._id %>" class="badge badge-danger font-weight-bold">Borrar</a>
                                </td>
                            </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</body>
<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
</html>
